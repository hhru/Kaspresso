<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/activity_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18pt"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="@string/main_screen_description"/>

    <Button
            android:id="@+id/activity_main_button_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_title"
            android:text="@string/simple_fragment"/>

    <Button
            android:id="@+id/activity_main_button_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_button_simple"
            android:text="@string/webview"/>

    <Button
            android:id="@+id/activity_main_button_scroll_view_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_button_webview"
            android:text="@string/scroll_view_sample"/>
    <Button
            android:id="@+id/activity_main_button_continuously_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continuously_sample"
            android:layout_below="@+id/activity_main_button_scroll_view_sample" />
    <TextView
            android:text="@string/main_screen_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_main_button_continuously_sample"
            android:id="@+id/activity_main_text_view_description"/>

</RelativeLayout>